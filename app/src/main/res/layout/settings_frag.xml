<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ringing_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/settings_item_background">

        <RelativeLayout
            android:id="@+id/ringing_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/ringing_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:text="提醒我"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/ringing_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ringing_title"
                android:layout_marginBottom="10dp"
                android:text="当收藏的节目开始时发送通知"
                android:textColor="#b1a4a4"
                android:textSize="14sp"/>

        </RelativeLayout>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/ringing_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"/>

    </RelativeLayout>

</RelativeLayout>